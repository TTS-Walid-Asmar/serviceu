<h2>Comments</h2>
<% commentable.comments.each do |comment| %>
<div class="panel panel-default">
        <div class="panel-body">
            <p class="text-muted">Posted by <%= comment.user.username %> <%= local_time_ago comment.created_at %></p>
            <p><%= markdownify comment.body %>
        </div>
</div>
    <% end %>
