<p id="notice"><%= notice %></p>

<div class="panel panel-primary">
    <div class="panel-heading">
          <%= @event.title %>
        <br>
        Special Thanks to <%= @event.user.username %> for posting this event!
    </div>
      <div class="panel-body">
    <table class="table">
        <tr>
      <th>Cost:</th>
      <th>Where:</th>
      <th>Start time:</th>
      <th>End time:</th>
            </tr>
        <tbody>
        <tr>
            <td>$<%= @event.cost %></td>
            <td><%= @event.where %></td>
            <td><%= @event.start_time.strftime("%B %e, %Y at %l:%M %p") %></td>
            <td><%= @event.end_time.strftime("%B %e, %Y at %l:%M %p") %></td>
            </tr>
        </tbody>
        </table>
  <%= @event.description %>
    </div>

    <% if current_user.id == @event.user.id %>

    <div class="panel-footer">
 <td><%= link_to 'Edit', edit_event_path(@event), class: "btn btn-warning" %></td>
        <td> <%= link_to 'Destroy', @event, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
            <% end %>
    </div>
</div>


