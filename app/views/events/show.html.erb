<p id="notice"><%= notice %></p>

<div class="well home-well">
    <div class="panel-heading">
          <%= @event.title %>
        <br>
        Special Thanks to <%= @event.user.username %> for posting this event!
    </div>
      <div class="well home-well">
    <table class="table">
        <tr>
      <td>Cost:</td>
      <td>Where:</td>
      <td>Start time:</td>
      <td>End time:</td>
            </tr>
            <table class="table">
        <tbody>
        <tr>
            <td>$<%= @event.cost %></td>
            <td><%= @event.where %></td>
            <td><%= @event.start.strftime("%B %e, %Y at %l:%M %p") %></td>
            <td><%= @event.end.strftime("%B %e, %Y at %l:%M %p") %></td>
            </tr>
        </tbody>
        </table>
  <%= @event.description %>
          <%= image_tag attachment_url(@event, :event_image, :fill, 300, 300, format: "jpg") %>

    </div>

    <% if current_user.id == @event.user.id %>

    <div class="panel-footer">
 <td><%= link_to 'Edit', edit_event_path(@event), class: "btn btn-warning" %></td>
       </div>
            <% end %>
    </div>
</div>

<%= render partial: "comments/comments", locals: {commentable: @event} %>

<%= render partial: "comments/form", locals: {commentable: @event} %>

<%= link_to 'Back', events_path %>
