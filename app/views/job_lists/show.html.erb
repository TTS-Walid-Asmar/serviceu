<p id="notice"><%= notice %></p>
<div class="container">
    <h1> <%= @job_list.title %></h1>
  <p class="text-muted">This job was posted by <%= @job_list.user.username %></p>


<p><h3><strong>Description:</strong>
 <%= @job_list.description %></h3>
</p>


  <% if current_user.id == @job_list.user.id %>

    <div class="panel-footer">
<%= link_to 'Edit', edit_job_list_path(@job_list), class: "btn btn-warning" %>
       <%= link_to 'Destroy', @job_list, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
            <% end %>

        <%= render partial: "comments/comments", locals: {commentable: @job_list} %>

        <%= render partial: "comments/form", locals: {commentable: @job_list} %>

        <%= link_to 'Back', job_lists_path, class: "btn btn-success" %>
</div>
</div>
